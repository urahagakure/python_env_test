{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ruff:check",
      "type": "shell",
      "command": "poetry run ruff check --config pyproject.toml --force-exclude .",
      "options": { "cwd": "${workspaceFolder}" },
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "mypy",
      "type": "shell",
      "command": "poetry run mypy .",
      "options": { "cwd": "${workspaceFolder}" }
    },
    {
      "label": "streamlitdev",
      "type": "shell",
      "command": "poetry run streamlit run hello_streamlit.py",
      "options": { "cwd": "${workspaceFolder}" },
      "isBackground": true
    }
  ]
}